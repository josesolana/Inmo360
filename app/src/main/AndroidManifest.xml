<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unicen.inmobiliaria">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <uses-library android:name="com.google.android.maps" />
        android:debuggable="true"
        <activity
            android:name=".Inmo360"
            android:configChanges="screenSize|orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QR"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_qr">
            QR</activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_maps">
            Map
        </activity>
        <activity
            android:name=".NothingSelectedSpinnerAdapter"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_nothing_selected_spinner_adapter" />
        <activity
            android:name=".Favoritos"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_favoritos" />
        <activity
            android:name=".DescripcionVivienda"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_descripcion_vivienda" />
        <activity
            android:name=".TabDescripcion"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_tab_descripicion" />
        <activity
            android:name=".VistaBarrio"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_vista_barrio" />
        <activity
            android:name=".VistaCasa360"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_vista_casa360" />
    </application>

</manifest>
